---
import GithubIcon from "./icons/GithubIcon.astro";
const response = await fetch('https://api.github.com/users/webreactiva-devs/repos');
const data = await response.json();
const firstProject = {
  name: data[0].name,
  html_url: data[0].html_url,
  description: data[0].description
}
---

<div class="border p-4 my-3">
  <h2>Mis proyectos en Github</h2>
  <div class="list-group">
    <a href={firstProject.html_url} class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
      <GithubIcon class="rounded-circle flex-shrink-0" />
      <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
          <h6 class="mb-0">{firstProject.name}</h6>
          <p class="mb-0 opacity-75">{firstProject.description}</p>
        </div>
      </div>
    </a>
  </div>
</div>